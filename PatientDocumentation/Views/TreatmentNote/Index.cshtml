@model IEnumerable<PatientDocumentation.Models.TreatmentNoteModels.TreatmentNoteListItem>

@{
    ViewBag.Title = "Index";
}

<h3>Notes</h3>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProviderName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Created)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    @Html.HiddenFor(modelItem => item.TreatmentNoteId)
    <td>
        @Html.DisplayFor(modelItem => item.PatientName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProviderName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AppointmentDate)
    </td>
    @*<td>
        @Html.DisplayFor(modelItem => item.Created)
    </td>*@
    <td>
        @Html.ActionLink("Append", "Edit", new { id = item.TreatmentNoteId }) |
        @Html.ActionLink("Details", "Details", new { id = item.TreatmentNoteId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.TreatmentNoteId })
    </td>
</tr>
    }

</table>
