@model IEnumerable<PatientDocumentation.Models.ProviderModels.ProviderListItem>

@{
    ViewBag.Title = "Index";
}

<h3>Providers</h3>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProviderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialization)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clinic)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProviderId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Specialization)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Clinic)
    </td>
    @if (User.IsInRole("Admin"))
    {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProviderId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProviderId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProviderId })
        </td>
    }
    else
    {
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ProviderId })
        </td>
    }
</tr>
    }

</table>
